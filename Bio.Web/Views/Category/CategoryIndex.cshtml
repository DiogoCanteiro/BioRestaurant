@model IEnumerable<Bio.Web.Models.CategoryDTO>

<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Categories List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateCategory" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Create New Category</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>
                        @category.Name
                    </td>
                    <td>
                        @category.Description
                    </td>
                    <td>
                        <a asp-action="EditCategory" class="btn btn-success" asp-route-categoryId="@category.CategoryId"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="DeleteCategory" class="btn btn-danger" asp-route-categoryId="@category.CategoryId"><i class="bi bi-trash3-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>